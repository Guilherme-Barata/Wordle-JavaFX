<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordle.LeaderboardController">
   <children>
      <BorderPane layoutX="126.0" layoutY="83.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox alignment="CENTER" prefHeight="125.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Logo.png" />
                     </image>
                  </ImageView>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleBackbutton" text="Back">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0">
                           <children>
                              <Label text="Leaderboard">
                                 <font>
                                    <Font name="System Bold" size="32.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </HBox>
                  <TableView fx:id="tvPlayerStats" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colNamePlayerStats" prefWidth="186.0" text="Username" />
                      <TableColumn fx:id="colGamesPlayedStats" prefWidth="186.0" text="Games played" />
                        <TableColumn fx:id="colGamesWonStats" prefWidth="186.0" text="Victories" />
                    </columns>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </TableView>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </top>
         <center>
            <TableView fx:id="tvLeaderBoard" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colRank" prefWidth="75.0" text="Rank #" />
                <TableColumn fx:id="colNamePlayer" prefWidth="75.0" text="Username" />
                  <TableColumn fx:id="colGamesPlayed" prefWidth="75.0" text="Games Played" />
                  <TableColumn fx:id="colGamesWon" prefWidth="75.0" text="Victories " />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
